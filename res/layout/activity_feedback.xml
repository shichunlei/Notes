<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgcolorValue"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_title"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/reply_contacts"
            style="@style/login_edittext"
            android:background="@drawable/bg_border"
            android:hint="@string/input_contacts" />

        <EditText
            android:id="@+id/reply_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_border"
            android:gravity="left"
            android:hint="@string/input_content"
            android:minLines="5"
            android:padding="10dp"
            android:textColor="@color/main_font_color"
            android:textColorHint="@color/main_font_color" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_button_bg"
            android:text="@string/submit"
            android:textColor="@color/main_font_color"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>