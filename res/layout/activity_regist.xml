<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundimage="http://schemas.android.com/apk/res-auto"
    android:id="@+id/regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <include
        android:id="@+id/top_title"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/top_title" >

        <scl.leo.library.image.HeaderImageView
            android:id="@+id/img_regist_add_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/add_photo"
            roundimage:border_color="@color/base_black_gray"
            roundimage:border_width="4dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_border"
            android:orientation="vertical"
            android:padding="3dp" >

            <EditText
                android:id="@+id/et_regist_name"
                style="@style/login_edittext"
                android:hint="输入用户名" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_font" />

            <EditText
                android:id="@+id/et_regist_email"
                style="@style/login_edittext"
                android:hint="输入邮箱"
                android:inputType="textEmailAddress" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_font" />

            <EditText
                android:id="@+id/et_regist_mobile"
                style="@style/login_edittext"
                android:hint="输入手机号码"
                android:inputType="phone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_font" />

            <EditText
                android:id="@+id/et_regist_pwd"
                style="@style/login_edittext"
                android:hint="输入密码"
                android:inputType="textPassword" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_font" />

            <EditText
                android:id="@+id/et_regist_repwd"
                style="@style/login_edittext"
                android:hint="确认密码"
                android:inputType="textPassword" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_font" />

            <TextView
                android:id="@+id/tv_regist_gender"
                style="@style/login_edittext"
                android:gravity="center"
                android:text="选择性别" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_regist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_button_bg"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>