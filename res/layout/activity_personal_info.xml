<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundimage="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgcolorValue"
    tools:context="${relativePackage}.${activityClass}" >

    <include
        android:id="@+id/top_title"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/top_title" >

        <scl.leo.library.image.HeaderImageView
            android:id="@+id/img_info_add_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_launcher"
            roundimage:border_color="@color/base_black_gray"
            roundimage:border_width="4dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:padding="3dp" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/green_tosk_bg" />

            <TextView
                android:id="@+id/tv_info_name"
                style="@style/login_edittext"
                android:gravity="center_vertical"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/green_tosk_bg" />

            <TextView
                android:id="@+id/tv_info_email"
                style="@style/login_edittext"
                android:gravity="center_vertical"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/green_tosk_bg" />

            <TextView
                android:id="@+id/tv_info_mobile"
                style="@style/login_edittext"
                android:gravity="center_vertical"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/green_tosk_bg" />

            <TextView
                android:id="@+id/tv_info_gender"
                style="@style/login_edittext"
                android:gravity="center_vertical"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/green_tosk_bg" />

            <TextView
                android:id="@+id/tv_info_age"
                style="@style/login_edittext"
                android:gravity="center_vertical"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/green_tosk_bg" />

            <TextView
                android:id="@+id/tv_info_birthday"
                style="@style/login_edittext"
                android:gravity="center_vertical"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/green_tosk_bg" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>