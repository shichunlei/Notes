<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundimage="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tools_box_bg"
    android:scrollbars="none"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:id="@+id/ll_personal_info">

            <scl.leo.library.image.HeaderImageView
                android:id="@+id/img_headerpic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher"
                roundimage:border_color="@color/base_black_gray"
                roundimage:border_width="4dp" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="#ffccccc6"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_aboutme"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="20dp"
            android:background="@drawable/leftmenu_bg"
            android:gravity="center_vertical"
            android:paddingLeft="20.0dip"
            android:singleLine="true"
            android:text="关于我们"
            android:textColor="#ffccccc6"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/leftmenu_bg"
            android:gravity="center_vertical"
            android:paddingLeft="20.0dip"
            android:singleLine="true"
            android:text="反馈"
            android:textColor="#ffccccc6"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/leftmenu_bg"
            android:gravity="center_vertical"
            android:paddingLeft="20.0dip"
            android:singleLine="true"
            android:text="设置"
            android:textColor="#ffccccc6"
            android:textSize="16.0sp" />

        <RelativeLayout
            android:id="@+id/rl_version"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/leftmenu_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:gravity="center_vertical"
                android:paddingLeft="20.0dip"
                android:singleLine="true"
                android:text="检测版本"
                android:textColor="#ffccccc6"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="20.0dip"
                android:singleLine="true"
                android:text=""
                android:textColor="#ffccccc6"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_clean"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/leftmenu_bg" >

            <TextView
                android:id="@+id/tv_clean"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:paddingLeft="20.0dip"
                android:singleLine="true"
                android:text="清空缓存"
                android:textColor="#ffccccc6"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/tv_clean_size"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="20.0dip"
                android:singleLine="true"
                android:text=""
                android:textColor="#ffccccc6"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/leftmenu_bg"
            android:gravity="center_vertical"
            android:paddingLeft="20.0dip"
            android:singleLine="true"
            android:text="注销登录"
            android:textColor="#ffccccc6"
            android:textSize="16.0sp" />
    </LinearLayout>

</ScrollView>